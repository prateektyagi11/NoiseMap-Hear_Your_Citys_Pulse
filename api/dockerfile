# noisemap/api/Dockerfile - robust build for packages that need compilation
FROM python:3.10-slim

ENV DEBIAN_FRONTEND=noninteractive
WORKDIR /usr/src/app

# Install system deps needed by librosa, soundfile, sklearn, etc.
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
      build-essential \
      gcc \
      ffmpeg \
      libsndfile1 \
      libpq-dev \
      wget \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and upgrade pip tooling before installing heavy packages
COPY requirements.txt .

# Upgrade pip/setuptools/wheel so it can grab prebuilt wheels where available
RUN python -m pip install --upgrade pip setuptools wheel

# Install Python packages (no-cache-dir keeps image smaller)
RUN pip install --no-cache-dir -r requirements.txt

# Copy app sources
COPY app ./app

# Expose port & run
EXPOSE 8000
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
